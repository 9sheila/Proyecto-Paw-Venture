<div class="d-flex justify-content-center text-center p-2">
  <div class="bg-white box-shadow border boder-rounded d-flex flex-column p-4 mt-4">
    <h1>Log in</h1>
    <form action="/login" method="POST">
      <div class="mb-4">
        <label for="email" class="form-label">Email</label>
        <input class="form-control{{#if errors.email}} is-invalid{{/if}}" name="email" type="email" id="email"
          placeholder="name@example.com" value="{{user.email}}" required>
        {{#if errors.email}}
        <div class="invalid-feedback">
          {{errors.email}}
        </div>
        {{/if}}
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input class="form-control" name="password" type="password" id="password" required>
      </div>
      <div class="flex ">
        <button class="button" type="submit">Log in</button>
        <hr>
        <a href="/login/google" class="btn btn-secondary">Login with Google</a>
      </div>
    </form>
  </div>
</div>