    <div class="card m-3" style="max-width:20%;">
      <img src="{{dog.avatar}}" width="50" class="card-img-top" alt="{{dog.name}}">
      <div class="card-body">
        <h3 class="card-title">{{dog.name}}</h3>
        <p class="card-subtitle mb-2 text-body-secondary">{{dog.race}}</p>
        <p class="card-subtitle mb-2 text-body-secondary">{{dog.age}} years</p>
         {{#if isWalker}}
      
<a class="link {{active path=path match='./userData/{{dog.owner._id}}'}}" href="/userData/{{dog.owner._id}}">{{dog.owner.name}}</a>
{{else}}
<a class="button link {{active path=path match='./dogs/{{dog._id}}/edit'}}"  href="./dogs/{{dog._id}}/edit">edit</a>


         {{/if}}
      </div>
    </div>
