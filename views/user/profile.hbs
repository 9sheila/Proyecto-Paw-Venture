
    <div class="row">
        <div class="col-md-4 mb-4">
            <section>
                <div><img width="80" class="rounded" src="{{currentUser.avatar}}" alt="profile pic"> </div>
                <h1>{{currentUser.name}}</h1>
        </div>
       
    </div>
    </section>
    </div>
    </div>
    <div class="container">
        {{#if isOwner}}
        <a class="p-0"><a class="link {{active path=path match='/../dogs/create'}}" href="/../dogs/create">add dog</a>
        <div class="d-flex w-100 flex-row justify-content-center">
        {{#each currentUser.dogs}}
                {{>dogCard dog=this}}
        {{/each}}
        </div>
       
        {{else}}
        <h2>{{currentUser.role}}</h2>
        <div class="d-flex w-100 flex-row justify-content-between">
        {{#each dogs}}
                 {{>dogCard dog=this}}
        {{/each}}
        </div>
        {{/if}}

    </div>
