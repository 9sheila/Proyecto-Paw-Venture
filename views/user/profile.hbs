
    <div class="row">
        <div class="col-md-4 mb-4">
            <section>
                <h1>Dogs</h1>
                <h2>{{currentUser.role}}</h2>
        </div>
    </div>
    </section>
    </div>
    </div>
    <div class="container">
        
        {{#if isOwner}}
        <a class="p-0"><a class="link {{active path=path match='/../dogs/create'}}" href="/../dogs/create">add dog</a>
        <div class="d-flex w-100 flex-row justify-content-center">
            {{#each currentUser.dogs}}
                {{>dogCard dog=this isWalker=false}}
            {{/each}}
        </div>
        {{else}}
            <div class="d-flex w-100 flex-row justify-content-center">
            {{#each dogs}}
                {{>dogCard dog=this isWalker=true}}
            {{/each}}
            </div>
        {{/if}}

    </div>
